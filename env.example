# ==============================================================================
# EMAIL (for RFQs and Award Notifications)
# ==============================================================================

SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="GC Interface <noreply@gcinterface.com>"

# ==============================================================================
# AI / OpenAI
# ==============================================================================

OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4"

# ==============================================================================
# FILE STORAGE (Wasabi)
# ==============================================================================

WASABI_ENDPOINT="https://s3.wasabisys.com"
WASABI_REGION="us-central-1"
WASABI_ACCESS_KEY_ID="your-wasabi-access-key"
WASABI_SECRET_ACCESS_KEY="your-wasabi-secret-key"
WASABI_BUCKET_NAME="gcinterface"

# ==============================================================================
# APPLICATION
# ==============================================================================

NODE_ENV="development"
PORT=3001
API_PREFIX="api"

RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ==============================================================================
# INTEGRATIONS
# ==============================================================================

GOOGLE_MAPS_API_KEY="your-google-maps-key"

# ==============================================================================
# FEATURES FLAGS
# ==============================================================================

ENABLE_AI_SCOPE_DIAGNOSIS=true
ENABLE_AUTO_RFQ=true
ENABLE_QUOTE_PARSING=true
ENABLE_VE_SUGGESTIONS=true


